rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Products: public read, no direct client writes
    match /products/{productId} {
      allow read: if true;
      allow write: if false;  // Only via API routes with ADMIN_TOKEN
    }
    
    // Orders: no direct client access (managed via API)
    match /orders/{orderId} {
      allow read, write: if false;  // Only via API routes
    }
    
    // Users: authenticated users can read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
